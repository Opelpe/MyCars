<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.VehicleExpensesApplication.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green_dark</item>
        <item name="colorAccent">@color/pistachio</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="green_round_button" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/common_round_button_selectable</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="green_tint" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">@color/green</item>
    </style>

    <style name="green_backgroundTint" parent="Theme.AppCompat.DayNight">
        <item name="android:backgroundTint">@color/green</item>
    </style>

    <style name="green_background" parent="Theme.AppCompat.DayNight">
        <item name="android:background">@color/green</item>
    </style>

    <style name="commonConfirmButtonStyle" parent="Theme.AppCompat.DayNight">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="commonCancelButtonStyle" parent="Theme.AppCompat.DayNight">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@drawable/font_color_grey_white_selected</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="commonCheckboxStyle" parent="Theme.AppCompat.DayNight">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@drawable/font_color_grey_white_selected</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="emailInputStyle" parent="Theme.AppCompat.DayNight">
        <item name="android:hint">@string/contact_emailAddress_example_title</item>
        <item name="android:importantForAutofill">yes</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="passwordInputStyle" parent="Theme.AppCompat.DayNight">
        <item name="android:hint">@string/contact_password_example_title</item>
        <item name="android:importantForAutofill">yes</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:minLines">@integer/fui_min_password_length</item>
    </style>

    <style name="titleTextStyle" parent="Theme.AppCompat.DayNight">
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="settingsTitleStyle" parent="Theme.AppCompat.DayNight">
        <item name="android:textSize">22sp</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:paddingHorizontal">@dimen/space_15dp</item>
        <item name="android:paddingVertical">@dimen/space_20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>